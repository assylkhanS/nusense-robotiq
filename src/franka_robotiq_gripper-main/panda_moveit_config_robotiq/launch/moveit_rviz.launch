<launch>
  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value="" />
  <arg     if="$(arg debug)" name="launch_prefix" value="gdb --ex run --args" />

  <arg name="model"
       default="$(find panda_with_robotiq_gripper_example)/robots/robotiq_mounted_on_panda.urdf.xacro" />

  <arg name="robot_description" default="robot_description" />

  <param name="$(arg robot_description)"
         command="$(find xacro)/xacro --inorder '$(arg model)'" />

  <arg name="rviz_config" default="" />
  <arg     if="$(eval rviz_config=='')" name="command_args" value="" />
  <arg unless="$(eval rviz_config=='')" name="command_args" value="-d $(arg rviz_config)" />

  <node name="$(anon rviz)" launch-prefix="$(arg launch_prefix)"
        pkg="rviz" type="rviz" respawn="false"
        args="$(arg command_args)" output="screen" />
</launch>
